{% block html_head_container %}

{% include 'html-header.twig' %}
	{% block head %}
	{% endblock %}
	</head>
{% endblock %}

	<body class="{{body_class}} bg-body" data-template="base.twig">
		<header class="header" >
			{% block header %}
				<div class="bg-navcolor px-8 sm:px-16 lg:px-16 2xl:px-32 3xl:px-44 flex items-end py-8">
                    {% if custom_logo_url %}
                         <a class="mr-12" href="{{site.url}}" rel="home">
                             <img src="{{custom_logo_url}}" alt="{{site.name}}">
                         </a>
                    {% else %}
                        <h1 class="" role="banner">
                            <a class="" href="{{site.url}}" rel="home">{{site.name}}</a>
                        </h1>
                    {% endif %}
					<nav id="nav-main" class="nav-main" role="navigation">
						{% include "menu.twig" with {'items': menuPrimary.get_items} %}
					</nav><!-- #nav -->
				</div>
			{% endblock %}
		</header>

		<section id="content" role="main" class="content-wrapper">
			{% if title %}<h1>{{title}}</h1>{% endif %}
			<div class="wrapper {{sidebar_class}}">
				{% block content %}
					Sorry, no content
				{% endblock %}
			</div>
			{% if sidebar %}
				<aside class="layout-sidebar">
					{{sidebar}}
				</aside>
			{% endif %}
		</section>

		{% block footer %}
			<footer id="footer">
                <div class="bg-navcolor px-8 sm:px-16 lg:px-16 2xl:px-32 3xl:px-44">
				    {% include 'footer.twig' %}
                </div>
			</footer>
			{{ function('wp_footer') }}
		{% endblock %}
        <script src={{ site.theme.link }}/app.js></script>
	</body>
</html>
